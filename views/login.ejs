<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-zinc-900">
    <div class="flex flex-col items-center justify-center min-h-screen w-full">
      <h1 class="text-5xl font-extrabold text-white mb-8 drop-shadow-lg">Login</h1>
      <form class="bg-zinc-800 p-8 rounded-2xl shadow-2xl w-full max-w-md flex flex-col gap-6" action="/login" method="post">
        <input type="text" name="email" placeholder="Email" class="px-4 py-3 rounded-lg bg-zinc-700 text-white placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
        <input type="password" name="password" placeholder="Password" class="px-4 py-3 rounded-lg bg-zinc-700 text-white placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
        <button type="submit" class="mt-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-bold py-3 rounded-lg shadow-lg hover:scale-105 transition-transform duration-200">Login</button>
      </form>
    </div>
  </body>
</html>